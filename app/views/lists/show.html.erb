<h1>Movies List </h1>

<div class="card p-3">
  <div class="card-body">
    <ul class="list-group">
      <% @list.bookmarks.each do |bookmark| %>
      <li class="list-group-item">
        <%= bookmark.movie.title %>
          <%= link_to bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this Movie?"} do %>
          <i class="fa-solid fa-delete-left "><span class="mx-1">Delete</span></i>
        <% end %>
      </li>
      <% end %>
    </ul>


      <%= simple_form_for([@list, @bookmark]) do |f| %>
      <%= f.input :comment%>
      <%= f.input :movie, collection: @list.movie_not_list%>
      <%= f.submit class: "btn btn-primary btn-sm my-3" %>
      <% end %>
  </div>
</div>


<%= link_to lists_path do %>
  <button type="button" class="btn btn-primary btn-sm my-3">Return Home</button>
<% end %>
