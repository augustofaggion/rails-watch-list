<h1>Save any kind of movies</h1>
<h2>Classic</h2>

<%# Movies list box %>
<h3>My lists</h3>
<div class="row row-cols-1 row-cols-md-2 g-4">
  <% @lists.each do |list| %>
    <div class="col">
      <div class="card">
        <%= cl_image_tag("oirpb1swylsjvtpbkdbv", width: 400, height: 300, crop: :fill) %>
        <div class="card-body bg-secondary bg-gradient bg-opacity-25">
          <p class="card-text">
            <%= link_to list_path(list)  do%>
              <button type="button" class="btn btn-outline-primary rounded-5">
                <%= list.name %>
              </button></p>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>


    <%= link_to new_list_path do %>
      <button type="button" class="btn btn-primary btn-ms my-3 rounded-5">Create a movie List</button>
    <% end %>
</div>
